{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Login</h1>

  {% if(errormessage) %}
            <div class="p-3 mb-2 bg-danger text-white">
                <h2>{{errormessage}}</h2>
            </div>
        {% endif %}

<form method="post" >
  <div class="form-group mb-3 w-50 ">
    <label for="email" class="form-label  ">Email address*</label>
    <input type="email" class="form-control border border-secondary" id="Email" name="email" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
    <div class="form-group mb-3 w-25">
    <label for="password" class="form-label">Password*</label>
    <input type="password" class="form-control border border-secondary" name="password" id="Password">
  </div>
  <button type="submit" class="btn btn-success">Envoyer</button>
</form>
<br>
    <a href="/" class="btn btn-dark">Back to main page</a>
{% endblock %}

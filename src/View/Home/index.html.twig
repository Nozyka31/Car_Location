{% extends 'layout.html.twig' %}

{% block content %}
<main>
       <h1 class="mt-4">Your car in one click {{ search.Car_id }}</h1>
<form method="post" class="card p-3">
            <input type="hidden" value={{ search.id }} name="id">
            <form method="post">
            <div class="d-flex row">
                <div class="form-group col-6">
                    <label class="col-form-label" for="car_id ">Car_id : </label>
                    <input type="text" class="form-control border border-3" name="car_id" value={{ car_id }}>
                </div>
                <div class="form-group col-6">
                    <label class="col-form-label" for="Type">Type : </label>
                    <input type="text" class="form-control border border-3" name="Type" value={{ search.Type }}>
                </div>
            </div>
            <div class="d-flex row">
                <div class="form-group col-12">
                    <label class="col-form-label" for="Desciption">Desciption : </label>
                    <input type="text" class="form-control border border-3" name="Desciption" value={{ search.Desciption }}>
                </div>
            </div>
            <div class="d-flex row">
                
            <div class="d-flex row">
                <div class="form-group col-4">
                    <label class="col-form-label" for="Year">Years : </label>
                    <input type="number" class="form-control border border-3" name="Year" max="50" value={{ search.Year }}>
                </div>
                <div class="form-group col-4">
                    <label class="col-form-label" for="Kms">Kilometers : </label>
                    <input type="number" class="form-control border border-3" name="Kms" min="20" value={{ search.Kms }}>
                </div>
            <div class="form-group col-4">
                    <label class="col-form-label" for="Price">Price a day : </label>
                    <input type="number" class="form-control border border-3" name="Price" min="5" value={{ search.Price }}>
                </div>
            <div class="d-flex row">
                <div class="form-group col-12">
                    <label class="col-form-label" for="Rating">Rating : </label>
                    <input type="text" class="form-control border border-3" name="Rating" value={{ search.Rating }}>
                </div>
            </div> 
</form>
</main>
<div class="d-flex justify-content-center">
<input type="submit" value="Search" class="btn btn-primary p-2 mt-3 col-5">
</div>
<footer></footer>

{% endblock %}
{% extends 'layout.html.twig' %}

{% block content %}

    <div class="d-flex flex-column align-items-center justify-content-center">

        {% if(session) %}
            <h2>Welcome {{session.firstname}}</h2>
        {% endif %}

        {% if(errormessage) %}
            <div class="p-3 mb-2 bg-danger text-white">
                <h2>{{errormessage}}</h2>
            </div>
        {% endif %}

        <h1>Look if we have cars to rent in your city !</h1>

        <form method="post" action="/announce/search">
            <div class="container">
            <input type="search" name="search" placeholder="Search a city">
            <input type="submit">
            </div>
        </form>

        <br>

        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/assets/images/vente-voiture-entre-particulier.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/assets/images/voiture_doccasion.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/assets/images/voiture.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
        </div>
    </div>

    <div>
    <br>
    <h3>Nos utilisateurs vous racontent !</h3>
    <br>
        <div class="d-flex flex-row justify-content-around">
            <div class="card col-3">
                <div class="card-header border border-dark">
                    Didier Jean
                </div>
                <div class="card-body border border-dark">
                    <blockquote class="blockquote mb-0">
                    <p>Quel plaisir de pouvoir louer une voiture facilement en arrivant sur Nantes !</p>
                    <footer class="blockquote-footer">Didier Jean,<cite title="Source Title"> rented a Toyota Yaris</cite></footer>
                    </blockquote>
                </div>
            </div>
            <div class="card col-3">
                <div class="card-header border border-dark">
                    Brad Pitt
                </div>
                <div class="card-body border border-dark">
                    <blockquote class="blockquote mb-0">
                    <p>Oh yeah !</p>
                    <footer class="blockquote-footer">Famous hollywood actor,<cite title="Source Title"> rented a Lamborghini Huracán</cite></footer>
                    </blockquote>
                </div>
            </div>
            <div class="card col-3">
                <div class="card-header border border-dark">
                    Pierre Godino
                </div>
                <div class="card-body border border-dark">
                    <blockquote class="blockquote mb-0">
                    <p>J'ai passé un super week end grâce à cette location de voiture !</p>
                    <footer class="blockquote-footer">Pierre Godino,<cite title="Source Title"> rented a Citroen C5</cite></footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
    <br>
    
    

{% endblock %}
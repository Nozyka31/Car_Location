{% extends 'layout.html.twig' %}

{% block title %} Loc-Auto | Inscription
{% endblock %}
{% set noIndex = true %}

{% block description %} Formulaire d'inscription à Loc-Auto
{% endblock %}

{% block content %}
    <h1>Inscription</h1>

    {% if(errormessage) %}
        <div class="p-3 mb-2 bg-danger text-white">
            <h2>{{errormessage}}</h2>
        </div>
    {% endif %}

    <form method="post">
            <input type="hidden" value={{ account.id }} name="id">
            <div class="d-flex row">
                <div class="form-group col-6">
                    <label class="col-form-label" for="firstname">Prénom : </label>
                    <input type="text" class="form-control border border-3" name="firstname" value={{ account.firstname }}>
                </div>
                <div class="form-group col-6">
                    <label class="col-form-label" for="lastname">Nom : </label>
                    <input type="text" class="form-control border border-3" name="lastname" value={{ account.lastname }}>
                </div>
            </div>
            <div class="d-flex row">
                <div class="form-group col-4">
                    <label class="col-form-label" for="username">Pseudo : </label>
                    <input type="text" class="form-control border border-3" name="username" value={{ account.username }}>
                </div>
                <div class="form-group col-4">
                    <label class="col-form-label" for="birthday">Date de naissance : </label>
                    <input type="date" class="form-control border border-3" name="birthday" value={{ account.birthday }}>
                </div>
                <div class="form-group col-4">
                    <label class="col-form-label" for="phone">Téléphone : </label>
                    <input type="text" class="form-control border border-3" name="phone" value={{ account.phone }}>
                </div>
            </div>
            <div class="form-group">
                <label class="col-form-label" for="email">Adresse e-mail : </label>
                <input type="mail" class="form-control border border-3" name="email">
            </div>
            <div class="form-group">
                <label class="col-form-label" for="password">Mot de passe : </label>
                <input type="password" class="form-control border border-3" name="password">
            </div>
            <div class="form-group">
                <label class="col-form-label" for="address">Adresse : </label>
                <input type="text" class="form-control border border-3" name="address" value={{ account.address }}>
            </div>
            <div class="d-flex row">
                <div class="form-group col-6">
                    <label class="col-form-label" for="city">Ville : </label>
                    <input type="text" class="form-control border border-3" name="city" value={{ account.city }}>
                </div>
                <div class="form-group col-6">
                    <label class="col-form-label" for="postal_code">Code postal : </label>
                    <input type="text" class="form-control border border-3" name="postal_code" value={{ account.postal_code }}>
                </div>
            </div>

            <input type="submit" class="btn btn-success mt-3 mb-3" value="Add">
            <a class="btn btn-warning" href="/account">Cancel</a>
        </form>

<a class="btn btn-dark" href="/">Back to main page</a>
{% endblock %}

{% extends 'layout.html.twig' %}

{% block content %}

<div class="container">
        <h1>Edit account {{ account.firstname }} {{ account.lastname }}</h1>
        <form method="post">
            <input type="hidden" value={{ account.id }} name="id">
            <div class="d-flex row">
                <div class="form-group col-6">
                    <label class="col-form-label" for="firstname">Firstname : </label>
                    <input type="text" class="form-control border border-3" name="firstname" value={{ account.firstname }}>
                </div>
                <div class="form-group col-6">
                    <label class="col-form-label" for="lastname">Lastname : </label>
                    <input type="text" class="form-control border border-3" name="lastname" value={{ account.lastname }}>
                </div>
            </div>
            <div class="d-flex row">
                <div class="form-group col-4">
                    <label class="col-form-label" for="username">Username : </label>
                    <input type="text" class="form-control border border-3" name="username" value={{ account.username }}>
                </div>
                <div class="form-group col-4">
                    <label class="col-form-label" for="birthday">Birthday : </label>
                    <input type="date" class="form-control border border-3" name="birthday" value={{ account.birthday }}>
                </div>
                <div class="form-group col-4">
                    <label class="col-form-label" for="phone">Phone : </label>
                    <input type="number" class="form-control border border-3" name="phone" value={{ account.phone }}>
                </div>
            </div>
            <div class="form-group">
                <label class="col-form-label" for="password">Change your password : </label>
                <input type="password" class="form-control border border-3" name="password">
            </div>
            <div class="form-group">
                <label class="col-form-label" for="address">Address : </label>
                <input type="text" class="form-control border border-3" name="address" value={{ account.address }}>
            </div>
            <div class="d-flex row">
                <div class="form-group col-6">
                    <label class="col-form-label" for="city">City : </label>
                    <input type="text" class="form-control border border-3" name="city" value={{ account.city }}>
                </div>
                <div class="form-group col-6">
                    <label class="col-form-label" for="postal_code">Postal code : </label>
                    <input type="text" class="form-control border border-3" name="postal_code" value={{ account.postal_code }}>
                </div>
            </div>

            <input type="submit" class="btn btn-success mt-3 mb-3" value="Update">
            <a class="btn btn-warning" href="/account">Cancel</a>
            <a href="/account/delete/{{account.id}}" class="btn btn-danger">Delete</a>
        </form>
    <a class="btn btn-dark" href="/account">Back to list</a>
    </div>


{% endblock %}
